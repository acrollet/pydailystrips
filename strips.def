    searchpattern <img src="http://www.qwantz.com/(comics/comic.*?\.png)"
    baseurl http://www.qwantz.com/
end

strip foxtrot
    name Foxtrot
    artist Bill Amend
    homepage http://www.gocomics.com/foxtrot
    searchpattern <img.*? src="(http://assets.amuniversal.com/[0-9a-f].+?)"
end

