    searchpattern <img src="http://toothpastefordinner.com/(\d{6}/.*?\.(gif|jpg|png))"
    baseurl $homepage
end

strip vagrant
    name Hark!  A Vagrant
    artist Kate Beaton
    homepage http://www.harkavagrant.com/
    searchpattern <img src="http://www.harkavagrant.com/(.+/.+\.(gif|jpg|png))" title
    baseurl $homepage
    onhold
end

