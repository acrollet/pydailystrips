    name Indexed
    artist Jessica Hagy
    homepage http://thisisindexed.com/
    searchpage http://thisisindexed.com/feed/
    searchpattern <img.+?srcset=.+? http://thisisindexed.com/(wp-content/uploads/\d+/\d+/card\d+\.(jpg|gif|png))
    baseurl $homepage
end

